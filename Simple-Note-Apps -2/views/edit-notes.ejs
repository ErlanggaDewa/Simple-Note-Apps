<div class="container" style="margin-top: 100px">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <form
        action="/<%= note.id %>?_method=PUT"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="modal-header row g-3" style="border-bottom: none">
          <div class="col-12 col-md-6">
            <div class="form-outline">
              <input
                required
                type="text"
                id="typeText"
                class="form-control"
                name="title"
                value="<%= note.title %>"
              />
              <label class="form-label" for="typeText">Title</label>
            </div>
          </div>
          <div class="col-12 col-md-6">
            <div class="input-group">
              <label class="input-group-text" for="inputGroupFile01"
                >Background</label
              >
              <input
                required
                type="file"
                class="form-control"
                id="inputGroupFile01"
                accept="image/*"
                name="image-backgroud"
              />
            </div>
          </div>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col">
              <div class="input-group">
                <div class="form-outline">
                  <textarea
                    required
                    class="form-control"
                    id="textAreaExample"
                    cols="1000"
                    name="text"
                  >
<%= note.text %></textarea
                  >
                  <label class="form-label" for="textAreaExample">Note</label>
                </div>
              </div>
            </div>
            <% if(note.img) {%>
            <div class="col-4 col-lg-2">
              <input required type="hidden" value="<%= note.img %>" />
              <img
                src="../../images/<%= note.img %>"
                alt=""
                width="100%"
                class="rounded-pill img-thumbnail hover-shadow"
              />
            </div>
            <% } %>
          </div>
        </div>
        <div class="modal-footer">
          <a href="/">
            <button type="button" class="btn btn-success">Back</button>
          </a>
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="reset" class="btn btn-danger">Reset</button>
        </div>
      </form>
    </div>
  </div>
</div>
